{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Project",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-std=c++17",
                "-g",

                // --- Source files ---
                "${workspaceFolder}/Project SS/src/main.cpp",
                "${workspaceFolder}/Project SS/src/funcs.cpp",

                // --- Output ---
                "-o",
                "${workspaceFolder}/Project SS/bin/ProjectSS",

                // --- Include + Library paths ---
                "-I${workspaceFolder}/SFML-3.0.2/include",
                "-L${workspaceFolder}/SFML-3.0.2/lib",

                // --- SFML libraries ---
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",

                // --- Runtime path ---
                "-Wl,-rpath,${workspaceFolder}/SFML-3.0.2/lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Project SS"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}